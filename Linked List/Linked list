#include <stdio.h>
#include <stdlib.h>

struct node {
    int data;
    struct node* next;
};

// Create list
void createlist(struct node** head) {
    int value;
    struct node* newnode;
    struct node* tail = NULL;
    printf("Enter elements (-1 to stop):\n");
    while (1) {
        printf("Enter Element: ");
        scanf("%d", &value);
        if (value == -1) break;

        newnode = (struct node*)malloc(sizeof(struct node));
        if (newnode == NULL) {
            printf("Failed to create node\n");
            return;
        }
        newnode->data = value;
        newnode->next = NULL;

        if (*head == NULL) {
            *head = tail = newnode;
        } else {
            tail->next = newnode;
            tail = newnode;
        }
    }
    printf("List created successfully\n");
}

// Traverse list
void traverse(struct node* head) {
    if (head == NULL) {
        printf("Current list: NULL\n");
        return;
    }
    printf("Current list: ");
    struct node* temp = head;
    while (temp != NULL) {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
}

// Size of list
int sizeoflist(struct node* head) {
    int size = 0;
    struct node* current = head;
    while (current != NULL) {
        size++;
        current = current->next;
    }
    return size;
}

// Insert at beginning
void insertbegin(struct node** head, int val) {
    struct node* newnode = (struct node*)malloc(sizeof(struct node));
    if (newnode == NULL) {
        printf("Memory full\n");
        return;
    }
    newnode->data = val;
    newnode->next = *head;
    *head = newnode;
    printf("Value inserted successfully at beginning\n");
}

// Insert at end
void insertend(struct node** head, int val) {
    struct node* newnode = (struct node*)malloc(sizeof(struct node));
    if (newnode == NULL) {
        printf("Memory allocation failed\n");
        return;
    }
    newnode->data = val;
    newnode->next = NULL;

    if (*head == NULL) {
        *head = newnode;
    } else {
        struct node* end = *head;
        while (end->next != NULL) {
            end = end->next;
        }
        end->next = newnode;
    }
    printf("Value inserted successfully at end\n");
}

// Insert at specific position
void insertspec(struct node** head, int pos, int val) {
    int size = sizeoflist(*head);
    if (pos < 1 || pos > size + 1) {
        printf("Invalid position\n");
        return;
    }
    if (pos == 1) {
        insertbegin(head, val);
        return;
    }
    struct node* newnode = (struct node*)malloc(sizeof(struct node));
    if (newnode == NULL) {
        printf("Memory allocation failed\n");
        return;

    }
    newnode->data = val;
    struct node* temp = *head;
    for (int i = 1; i < pos - 1; i++) {
        temp = temp->next;
    }
    newnode->next = temp->next;
    temp->next = newnode;
    printf("Node inserted at position %d successfully\n", pos);
}

// Delete at beginning
void deletebegin(struct node** head) {
    if (*head == NULL) {
        printf("List is empty (Underflow)!\n");
        return;
    }
    struct node* temp = *head;
    *head = temp->next;
    free(temp);
    printf("Deleted node from beginning successfully\n");
}

// Delete at end
void deleteend(struct node** head) {
    if (*head == NULL) {
        printf("List is empty (Underflow)!\n");
        return;
    }
    struct node* temp = *head;
    if (temp->next == NULL) {
        free(temp);
        *head = NULL;
        printf("Deleted node from end successfully\n");
        return;
    }
    while (temp->next->next != NULL) {
        temp = temp->next;
    }
    free(temp->next);
    temp->next = NULL;
    printf("Deleted node from end successfully\n");
}

// Delete at specific position
void deletespec(struct node** head, int pos) {
    int size = sizeoflist(*head);
    if (pos < 1 || pos > size) {
        printf("Invalid position\n");
        return;
    }
    if (*head == NULL) {
        printf("List is empty!\n");
        return;
    }
    if (pos == 1) {
        deletebegin(head);
        return;
    }
    struct node* temp = *head;
    for (int i = 1; i < pos - 1; i++) {
        temp = temp->next;
    }
    struct node* current = temp->next;
    temp->next = current->next;
    free(current);
    printf("Deleted node at position %d successfully\n", pos);
}

// Search for an element
void search(struct node* head, int val) {
    int pos = 1;
    struct node* temp = head;
    while (temp != NULL) {
        if (temp->data == val) {
            printf("Element found at position %d\n", pos);
            return;
        }
        temp = temp->next;
        pos++;
    }
    printf("Element not found in the list\n");
}


int main() {
    struct node* head = NULL;
    int choice, value, position;

    do {
        printf("\n---------Menu----------\n");
        printf("1. Create list\n");
        printf("2. Traverse list\n");
        printf("3. Size of list\n");
        printf("4. Insert at beginning\n");
        printf("5. Insert at end\n");
        printf("6. Insert at position\n");
        printf("7. Delete at beginning\n");
        printf("8. Delete at end\n");
        printf("9. Delete at position\n");
        printf("10. Search\n");
        printf("11. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                createlist(&head);
                break;
            case 2:
                traverse(head);
                break;
            case 3:
                printf("Size of list: %d\n", sizeoflist(head));
                break;
            case 4:
                printf("Enter the value to insert at beginning: ");
                scanf("%d", &value);
                insertbegin(&head, value);
                traverse(head);
                break;
            case 5:
                printf("Enter the value to insert at end: ");
                scanf("%d", &value);
                insertend(&head, value);
                traverse(head);
                break;
            case 6:
                printf("Enter the value to insert: ");
                scanf("%d", &value);
                printf("Enter position: ");
                scanf("%d", &position);
                insertspec(&head, position, value);
                traverse(head);
                break;
            case 7:
                deletebegin(&head);
                traverse(head);
                break;
            case 8:
                deleteend(&head);
                traverse(head);
                break;
            case 9:
                printf("Enter position to delete: ");
                scanf("%d", &position);
                deletespec(&head, position);
                traverse(head);
                break;
            case 10:
                printf("Enter element to search: ");
                scanf("%d", &value);
                search(head, value);
                break;
            case 11:
                printf("Exiting...\n");
                break;
            default:
                printf("Enter correct choice\n");
        }
    } while (choice != 11);

    return 0;
}
