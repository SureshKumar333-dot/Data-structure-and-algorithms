#include <stdio.h>

void bubblesorting(int arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        int swapped = 0;
        for (int j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                int temp = arr[j];          // Correct swapping
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
                swapped = 1;
            }
        }
        if (swapped == 0)
            break;
    }
}

void selectionsorting(int arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        int min_index = i;                // Correct initialization to i
        for (int j = i + 1; j < n; j++) {
            if (arr[j] < arr[min_index]) {
                min_index = j;
            }
        }
        int temp = arr[i];
        arr[i] = arr[min_index];
        arr[min_index] = temp;
    }
}

void insertionsorting(int arr[], int n) {
    for (int i = 1; i < n; i++) {
        int key = arr[i];
        int j = i - 1;
        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j--;
        }
        arr[j + 1] = key;
    }
}

void display(int arr[], int n) {
    printf("Sorted array: ");
    for (int i = 0; i < n; i++)
        printf("%d ", arr[i]);
    printf("\n");
}

int main() {
    int arr[100], n, choice;
    printf("Enter number of elements for array: ");
    scanf("%d", &n);
    printf("Enter elements to insert: ");
    for (int k = 0; k < n; k++)
        scanf("%d", &arr[k]);

    do {
        printf("========= Sorting menu =========\n");
        printf("1. Bubble sorting\n");
        printf("2. Selection sorting\n");
        printf("3. Insertion sorting\n");
        printf("4. Exit\n");

        printf("\nEnter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                bubblesorting(arr, n);
                printf("\nSorted using Bubble Sorting method:\n");
                display(arr, n);            // Call display function
                break;
            case 2:
                selectionsorting(arr, n);
                printf("\nSorted using Selection Sorting method:\n");
                display(arr, n);
                break;
            case 3:
                insertionsorting(arr, n);
                printf("\nSorted using Insertion Sorting method:\n");
                display(arr, n);
                break;
            case 4:
                printf("Exiting the program...\n");
                break;
            default:
                printf("Invalid choice! Please select 1 to 4.\n");
        }
    } while (choice != 4);

    return 0;
}
